    <!-- The Edit Modal -->
    <!-- <div class="modal" id="editModal">
        <div class="modal-body">
            <label for="fontSizeInput">Font Size:</label>
            <input type="number" id="fontSizeInput" placeholder="Enter font size" onchange="updateFontSize()">
        </div>
